{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "target": "ES2020",               // Use ES2020 for compatibility
    "module": "CommonJS",             // Use CommonJS for Node.js
  },
  // "include": ["src/**/*.ts"],          // Include all TypeScript files from the 'src' directory
  "exclude": ["node_modules", "dist"]  // Exclude the 'node_modules' and 'dist' directories
}
